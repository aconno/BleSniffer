            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/hex_keyboard_text_size"
            android:backgroundTint="@color/keyboardButton"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/hex_keyboard_text_size"
            android:backgroundTint="@color/keyboardButtonDisabled"
            android:enabled="false"
            />

        <Button
            android:id="@+id/button_0"
            android:text="@string/keyboard_key_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/hex_keyboard_text_size"
            android:backgroundTint="@color/keyboardButton"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/hex_keyboard_text_size"
            android:backgroundTint="@color/keyboardButtonDisabled"
            android:enabled="false"
            />

        <Button
            android:id="@+id/button_backspace"
            android:text="@string/keyboard_key_backspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/hex_keyboard_text_size"
            android:backgroundTint="@color/keyboardButton"
            />

    </LinearLayout>


</LinearLayout>